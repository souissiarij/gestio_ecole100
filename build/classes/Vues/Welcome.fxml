<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlleurs.WelcomeController" style="-fx-background-color: linear-gradient(to bottom, #d9e9ff, #ffffff);">
    <center>
        <HBox spacing="0" prefHeight="500.0" prefWidth="800.0">
            <!-- Left Section: Login Form -->
            <VBox spacing="20" alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom, #4ca1af, #2c3e50); -fx-padding: 30;">
                <Text text="Bienvenue" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Button text="Entrer" fx:id="btnEnter" onAction="#goToAdmin" style="-fx-font-size: 20px; -fx-background-color: white; -fx-text-fill: black; -fx-text-weight: bold ;-fx-padding: 10 20; -fx-background-radius: 5;"/>
            </VBox>

            <!-- Right Section: Blue Background with Image -->
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 50;">
                <ImageView fx:id="imageView" fitWidth="400" preserveRatio="true" style="-fx-alignment: center;" >
                    <image>
                        <Image url="@../images/logo.png"/>
                    </image>
                </ImageView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
