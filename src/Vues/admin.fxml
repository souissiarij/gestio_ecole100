<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="Controlleurs.AdminController" style="-fx-font-family: Arial;">

    <!-- Image de fond -->
    <ImageView fitWidth="600" fitHeight="400" preserveRatio="true">
        <Image url="@../images/welcome.jpg"/> <!-- Remplacez par votre image -->
    </ImageView>

    <!-- Contenu de l'interface -->
    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(255, 255, 255, 0.6); -fx-padding: 20;">
        <!-- Titre -->
        <Text text="MENU PRINCIPAL" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Boutons -->
        <Button text="Étudiant" onAction="#handleEtudiant" style="-fx-pref-width: 150;"/>
        <Button text="Enseignant" onAction="#handleEnseignant" style="-fx-pref-width: 150;"/>
        <Button text="Matière" onAction="#handleMatiere" style="-fx-pref-width: 150;"/>
        <Button text="Certificat" onAction="#handleCertificat" style="-fx-pref-width: 150;"/>
        <Button text="Évaluation" onAction="#handleEvaluation" style="-fx-pref-width: 150;"/>
        <Button text="Emploi" onAction="#handleEmploi" style="-fx-pref-width: 150;"/>
        <Button text="Club" onAction="#handleClub" style="-fx-pref-width: 150;"/>
        
            </VBox>

       
</StackPane>
