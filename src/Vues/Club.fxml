<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="Controlleurs.ClubController"
           style="-fx-font-family: Arial;">
    <!-- Image de fond -->
    <ImageView fitWidth="800" fitHeight="600" preserveRatio="true" style="-fx-opacity: 0.7;">
        <Image url="@../images/club.jpg"/> <!-- Remplacez par le chemin de votre image -->
    </ImageView>

    <!-- Contenu principal -->
    <VBox spacing="20" alignment="CENTER" style="
            -fx-padding: 30; 
            -fx-background-color: rgba(255, 255, 255, 0.85); 
            -fx-background-radius: 15;
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0.2, 2, 2);">
        
        <!-- Section Membre -->
        <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 500;">
            <Label text="Gestion des Membres" style="
                    -fx-font-size: 18px; 
                    -fx-font-weight: bold; 
                    -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="nomField" promptText="Nom du membre" style="-fx-padding: 10; -fx-border-color: #3498db; -fx-background-radius: 5;"/>
            <TextField fx:id="prenomField" promptText="PrÃ©nom du membre" style="-fx-padding: 10; -fx-border-color: #3498db; -fx-background-radius: 5;"/>
            <ChoiceBox fx:id="clubTypeChoiceBox" style="-fx-padding: 10; -fx-pref-width: 300;" />
            <Button text="Ajouter Membre" onAction="#ajouterMembre" style="
                    -fx-background-color: linear-gradient(to bottom, #27ae60, #2ecc71);
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-padding: 10 20;"/>
            <Button text="Afficher Membres" onAction="#afficherMembres" style="
                    -fx-background-color: linear-gradient(to bottom, #2980b9, #3498db);
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-padding: 10 20;"/>
        </VBox>
        
        <!-- Section Club -->
        <VBox spacing="15" alignment="CENTER" style="-fx-pref-width: 500; -fx-margin-top: 20;">
            <Label text="Gestion des Clubs" style="
                    -fx-font-size: 18px; 
                    -fx-font-weight: bold; 
                    -fx-text-fill: #2c3e50;"/>
            <TextField fx:id="nomClubField" promptText="Nom du club" style="-fx-padding: 10; -fx-border-color: #3498db; -fx-background-radius: 5;"/>
            <Button text="Ajouter Club" onAction="#ajouterClub" style="
                    -fx-background-color: linear-gradient(to bottom, #e67e22, #d35400);
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-padding: 10 20;"/>
            <Button text="Afficher Nom du Club" onAction="#afficherNomClub" style="
                    -fx-background-color: linear-gradient(to bottom, #2980b9, #3498db);
                    -fx-text-fill: white;
                    -fx-background-radius: 10;
                    -fx-padding: 10 20;"/>
        </VBox>
        
        <!-- Section Affichage -->
        <TextArea fx:id="outputArea" editable="false" style="
                -fx-pref-height: 150;
                -fx-pref-width: 500;
                -fx-padding: 10; 
                -fx-border-color: #bdc3c7; 
                -fx-background-radius: 5;" />

        <!-- Bouton Retour -->
        <Button text="Retour au menu principal" onAction="#handleRetourMenuPrincipal" style="
                -fx-background-color: linear-gradient(to bottom, #c0392b, #e74c3c);
                -fx-text-fill: white;
                -fx-background-radius: 10;
                -fx-padding: 10 20;"/>
    </VBox>
</StackPane>
