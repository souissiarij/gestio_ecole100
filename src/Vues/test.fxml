<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-image: url('images/welcome.jpg'); 
                   -fx-background-size: cover; 
                   -fx-background-position: center;" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Controlleurs.TestController">

    <children>
        <!-- Rectangle semi-transparent en arrière-plan -->
        <Pane prefHeight="400.0" prefWidth="900.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.6);"
              mouseTransparent="true">
        </Pane>

        <!-- Conteneur principal pour les boutons et le tableau -->
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30"
              prefHeight="300" prefWidth="500">
            
            <!-- Titre -->
            <Label text="MENU Test" 
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: black;" 
                   alignment="CENTER" />

            <!-- Boutons avec largeur fixe -->
            <Button text="Ajouter un test" onAction="#ajouterTest" prefWidth="300" />
            <Button text="Supprimer un test" onAction="#supprimerTest" prefWidth="300" />
            <Button text="Modifier un test" onAction="#modifierTest" prefWidth="300" />
            <Button text="Afficher la liste des tests" onAction="#afficherListeTest" prefWidth="300" />
            <Button text="Retour au menu evaluation" onAction="#handleRetourMenuevaluhation" prefWidth="300" />
 
        </VBox>

        <!-- TableView pour afficher la liste des tests -->
        <VBox alignment="TOP_CENTER" spacing="10" layoutX="50" layoutY="350"
              prefHeight="300" prefWidth="500">
            
            <!-- Titre pour le tableau -->
            <Label text="Liste des tests" style="-fx-font-size: 18px;" />

            <TableView fx:id="testTable" prefHeight="300" prefWidth="500" visible="false">
                <columns>
                    <TableColumn fx:id="idEvaluation" text="ID Test" prefWidth="100" />
                    <TableColumn fx:id="typeColumn" text="Type de Test" prefWidth="150" />
                    <TableColumn fx:id="niveauDifficulteColumn" text="Niveau de Difficulté" prefWidth="125" />
                    <TableColumn fx:id="coursColumn" text="Cours de Test" prefWidth="125" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
