<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controlleurs.LoginController" style="-fx-background-color: linear-gradient(to bottom, #d9e9ff, #ffffff);">
    <center>
        <HBox spacing="0" prefHeight="500.0" prefWidth="800.0">
            <!-- Left Section: Login Form -->
            <VBox spacing="20" alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 30;">
                <Text text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #34495e;"/>
                <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #3498db;"/>
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #3498db;"/>
                <CheckBox fx:id="rememberMeCheckbox" text="Remember me" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                <Button text="Login" fx:id="loginButton" onAction="#handleLogin" style="-fx-font-size: 14px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                <Hyperlink text="Forgot password?" onAction="#handleForgotPassword" style="-fx-font-size: 12px; -fx-text-fill: #3498db;"/>
            </VBox>

            <!-- Right Section: Blue Background with Image -->
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom, #4ca1af, #2c3e50); -fx-padding: 50;">
                <ImageView fx:id="imageView" fitWidth="400" preserveRatio="true" style="-fx-alignment: center;" >
                    <image>
                        <Image url="@../images/youssef.png"/>
                    </image>
                </ImageView>
            </VBox>
        </HBox>
    </center>
</BorderPane>
