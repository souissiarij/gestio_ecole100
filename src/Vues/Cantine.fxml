<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlleurs.CantineController" spacing="20"
      style="-fx-padding: 20; -fx-background-color: #f0f4f8; -fx-border-color: #cfd8dc; -fx-border-width: 2; -fx-border-radius: 15; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.15), 5, 0.5, 3, 3);">
    
    <!-- Titre principal -->
    <Text text="Gestion de la Cantine" style="
            -fx-font-size: 28px; 
            -fx-font-weight: bold; 
            -fx-fill: linear-gradient(to right, #2c3e50, #34495e); 
            -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0.5, 2, 2);"/>

    <!-- Champs de saisie -->
    <VBox spacing="15" style="-fx-padding: 10;">
        <HBox spacing="15">
            <TextField fx:id="idField" promptText="ID Étudiant" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
            <TextField fx:id="nomField" promptText="Nom Étudiant" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
            <TextField fx:id="prenomField" promptText="Prénom Étudiant" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
        </HBox>
        <HBox spacing="15">
            <TextField fx:id="emailField" promptText="Email Étudiant" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
            <TextField fx:id="niveauEtudesField" promptText="Niveau Étudiant" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
            <TextField fx:id="platSelectionField" promptText="Plat Sélectionné" 
                       style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 5;"/>
        </HBox>
    </VBox>

    <!-- Boutons d'action -->
    <HBox spacing="20" alignment="center">
        <Button text="Enregistrer" onAction="#enregistreretudiant"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 10; -fx-background-radius: 10; 
                       -fx-hover-background-color: #2ecc71; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 3, 0.5, 2, 2);"/>
        <Button text="Retour" onAction="#retour"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-border-radius: 10; -fx-background-radius: 10; 
                       -fx-hover-background-color: #c0392b; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 3, 0.5, 2, 2);"/>
    </HBox>
</VBox>
