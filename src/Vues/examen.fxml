<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-image: url('images/welcome.jpg'); 
                   -fx-background-size: cover; 
                   -fx-background-position: center;" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Controlleurs.ExamenController">

    <children>
        <!-- Rectangle semi-transparent en arrière-plan -->
        <Pane prefHeight="600.0" prefWidth="800.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.6);" 
              mouseTransparent="true" />

        <!-- Conteneur principal pour les boutons et le tableau -->
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="30"
              prefHeight="300" prefWidth="500">
            
            <!-- Titre -->
            <Label text="MENU Examen" 
                   style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: black;" 
                   alignment="CENTER" />

            <!-- Boutons avec largeur fixe -->
            <Button text="Ajouter un examen" onAction="#ajouterExamen" prefWidth="300" />
            <Button text="Supprimer un examen" onAction="#supprimerExamen" prefWidth="300" />
            <Button text="Modifier un examen" onAction="#modifierExamen" prefWidth="300" />
            <Button text="Afficher la liste des examens" onAction="#afficherListeExamen" prefWidth="300" />
            <Button text="Retour au menu évaluation" onAction="#handleRetourMenuevaluation" prefWidth="300" />
        </VBox>

        <!-- TableView pour afficher la liste des examens -->
        <VBox alignment="TOP_CENTER" spacing="10" layoutX="50" layoutY="350"
              prefHeight="300" prefWidth="700">
            
            <!-- Titre pour le tableau -->
            <Label text="Liste des examens" style="-fx-font-size: 18px;" />

            <TableView fx:id="certificatTable" prefHeight="300" prefWidth="700" visible="false">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID Evaluation" prefWidth="100" />
                    <TableColumn fx:id="matiereColumn" text="Matière Evaluation" prefWidth="200" />
                    <TableColumn fx:id="coefficientColumn" text="Coefficient" prefWidth="150" />
                    <TableColumn fx:id="dateEvaluationColumn" text="Date Evaluation" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
